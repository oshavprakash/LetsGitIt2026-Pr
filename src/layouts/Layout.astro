---
import "../styles/global.css";

// Font Imports - Variable fonts for neobrutalism
import "@fontsource/syne/800.css"; // For "LET'S"
import "@fontsource/space-grotesk/300.css";
import "@fontsource/space-grotesk/400.css";
import "@fontsource/space-grotesk/500.css";
import "@fontsource/space-grotesk/600.css";
import "@fontsource/space-grotesk/700.css";
import "@fontsource/archivo-black/400.css"; // Bold display font
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import "@fontsource/bebas-neue/400.css"; // Ultra-bold display

interface Props {
	title?: string;
}

const { title = "Let's Git It" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<meta
			name="description"
			content="Let's Git It - A fun Git & GitHub workshop by FOSS MEC. Learn version control through hands-on collaboration."
		/>
		<meta
			name="keywords"
			content="git, github, open source, foss, mec, workshop, version control"
		/>

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content="Learn Git & GitHub through hands-on collaboration. Submit your first PR!"
		/>
		<meta property="og:type" content="website" />

		<!-- Clash Display Font from Fontshare -->
		<link
			href="https://api.fontshare.com/v2/css?f[]=clash-display@200,300,400,500,600,700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>

		<script is:inline>
			// ============================================
			// ðŸŽ² RANDOM THEME ON PAGE LOAD
			// ============================================
			const themes = [
				"theme-lime",
				"theme-purple",
				"theme-blue",
				"theme-coral",
				"theme-mint",
				"theme-yellow",
				"theme-cyber",
			];
			const randomTheme =
				themes[Math.floor(Math.random() * themes.length)];
			document.documentElement.classList.add(randomTheme);

			// Store theme for potential use
			window.__currentTheme = randomTheme;
		</script>

		<style is:global>
			/* Prevent flash of unstyled content */
			html {
				opacity: 1;
				transition: opacity 0.3s ease;
			}
		</style>
	</head>
	<body class="min-h-screen overflow-x-hidden">
		<slot />
	</body>
</html>
